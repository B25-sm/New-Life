{
  "name": "newlife-mern",
  "version": "1.0.0",
  "description": "MERN Stack application with Next.js",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "prebuild": "cd client && npm install",
    "build": "npm run build:client && node scripts/sync-next-dist.mjs",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start"
  },
  "keywords": [
    "mern",
    "nextjs",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "next": "^14.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "typed.js": "^2.1.0"
  }
}
